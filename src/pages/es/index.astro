---
// USE `npx astro-i18next generate` TO GENERATE TRANSLATED PAGES
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
import Navbar from "../../components/Header.astro";
import "../../styles/global.scss";
import Image from "astro/components/Image.astro";
import ellipse from "../../images/ellipse.png";
import "@fontsource-variable/inter";

changeLanguage("es");
---

<html lang={i18next.language}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t("site.title")}</title>
    <meta name="description" content={t("site.description")} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Tomás Goizueta" />
    <HeadHrefLangs />
  </head>
  <body>
    {
      /*
      <h1>{t("home.title")}</h1>
      <p>
        <Trans i18nKey="home.subtitle">
          This is a <em>more complex</em> string to translate, mixed with <strong
          >html elements
          </strong> such as <a href="https://example.com/">a cool link</a>!
        </Trans>
      </p>   
    */
    }

    <Navbar
      pages={[
        t("navbar.hello"),
        t("navbar.about"),
        t("navbar.projects"),
        t("navbar.contact"),
      ]}
    />
    <main>
      <section class="section-1">
        <img src={ellipse} class="bg-figure-1" />
        <div class="info">
          <h1>TOMÁS GOIZUETA</h1>
          <h2>Front-End Developer / UI</h2>
          <p>
            I’m a Software Engineer who is starting his career as a web
            developer. My lifelong passion for design has been combined with my
            interest in software development to create responsive and attractive
            products.
            <br />
            <br />
            Currently working at
            <strong
              ><a
                href="https://www.babelgroup.com/en"
                target="_blank"
                rel="noopener noreferrer">Babel</a
              ></strong
            >.
          </p>
          <div class="buttons">
            <button class="cta">
              <span>MY WORKS</span>
            </button>
          </div>
        </div>
      </section>
    </main>
    <svg>
      <filter id="noiseFilter">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.30"
          stitchTiles="stitch"></feTurbulence>
      </filter>
    </svg>

    {
      /*
      The Style sheet goes here for better integration with Astro.

      Clases are scoped to the component, so you can use them without
      worrying about collisions.
      */
    }

    <style lang="scss">
      * {
        margin: 0;
        padding: 0;
        color: var(--white-primary);
        font-family: "Inter Variable", sans-serif;
      }

      body {
        background-color: var(--black-primary);
      }

      svg {
        position: absolute;
        z-index: 5;
      }

      section {
        height: 100%;
      }

      main::before {
        position: absolute;
        right: 0;
        top: 0;
        content: "";
        width: 100%;
        height: 100%;
        opacity: 15%;
        filter: url(#noiseFilter);
        pointer-events: none;
      }

      .bg-figure-1 {
        position: absolute;
        width: 45.9vw;
        top: 21.5vh;
        right: 7.5vw;
        filter: blur(5.2vw); //100px
        overflow: hidden;
        z-index: -1;
        pointer-events: none;
      }

      .section-1 {
        width: calc(50vw + 10.6562rem);
        display: flex;
        justify-content: flex-end;
      }

      .info {
        display: inline-flex;
        flex-direction: column;

        h1 {
          display: inline-block;
        }

        h2 {
          display: inline-block;
          background: var(
            --fade-gray,
            linear-gradient(180deg, #ebeaf3 0%, rgba(166, 163, 189, 0) 200%)
          );
        }
        p {
          color: var(--light-gray);
          font-size: 1.125rem;
          font-weight: 400;
        }

        strong {
          background: linear-gradient(90deg, #0e37f1 -300%, #fe19aa 100%);
          background-clip: text;
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          font-size: 1.125rem;
          font-weight: 600;
        }

        a {
          text-decoration: none;
        }

        .buttons {
          display: flex;
          margin-top: 6.7vh;
        }

        .cta {
          cursor: pointer;
          border: 2px solid transparent;
          border-radius: 10px;
          background: linear-gradient(
                var(--black-primary),
                var(--black-primary)
              )
              padding-box,
            linear-gradient(
                90deg,
                var(--pink-primary),
                var(--purple-primary),
                var(--pink-primary)
              )
              0 0 / var(--bg-size) 100% border-box;
          background-size: 200% 200%;
          animation: gradient-bg 8s linear infinite;
          border-radius: 10px;
          padding: 0.81rem 8.1% 0.81rem 8.1%;

          span {
            font-weight: 600;
            font-size: 1.5rem;
            line-height: 29px;
            background: linear-gradient(
                90deg,
                var(--pink-primary),
                var(--purple-primary),
                var(--pink-primary)
              )
              0 0 / var(--bg-size);
            background-size: 200% 200%;
            animation: gradient-bg 8s linear infinite;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-size: 200% 200%;
            background-clip: text;
            text-fill-color: transparent;
          }
        }
      }

      @keyframes gradient-bg {
        to {
          background-position: var(--bg-size) 0;
        }
      }

      @media (width >= 50em) {
        .info {
          margin-top: 22.47vh;

          h1 {
            background: linear-gradient(270deg, #fe19aa 0%, #0e37f1 250%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0px 8px 24px rgba(0, 0, 0, 0.15);
            font-size: calc(min(4.6875rem, 6.5vw));
            font-weight: 800;
          }

          h2 {
            margin-top: calc(max(2vw, 2rem));
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 40px;
            font-weight: 700;
          }

          p {
            max-width: 481px;
            margin-top: 3.7vh;
          }
        }
      }

      @media (width < 50em) {
      }
    </style>
  </body>
</html>

